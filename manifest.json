{
    "manifest_version": 3,
    "name": "Beludia - Save All Open Tabs",
    "version": "1.0.0",
    "description": "Save all currently open tabs, and reopen them on restart!",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        },
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "unlimitedStorage",
        "bookmarks",
        "alarms"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}