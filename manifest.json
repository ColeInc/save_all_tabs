{
    "manifest_version": 2,
    "name": "Save All Tabs",
    "version": "1.0",
    "description": "save all currently open tabs, and reopen them on restart!",
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "name": "cole",
        "icons": [
            "images/icon.png"
        ],
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "unlimitedStorage",
        "bookmarks",
        "alarms",
        "http://*/*",
        "https://*/*"
    ]
}